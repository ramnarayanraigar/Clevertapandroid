<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductViewedActivity"
    android:padding="8dp">

    <TextView
        android:id="@+id/text_product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Id = 1"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/text_product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name = CleverTap"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:layout_below="@id/text_product_id"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/image_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_product_name"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>